{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "2.0.0",
  "default_locale": "en",
  "author": "Philipp Kewisch",
  "applications": {
    "gecko": {
      "id": "quickmove@mozilla.kewis.ch",
      "strict_min_version": "66.0a1"
    }
  },
  "icons": {
    "32": "images/addon.png"
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "background": { "scripts": ["background.js"] },


  "permissions": [
    "storage",
    "accountsRead",
    "messagesRead",
    "messagesMove"
  ],

  "browser_action": {
    "default_icon": "images/addon.png",
    "default_popup": "popup/popup.html",
    "default_title": " ",
    "browser_style": true
  },

  "commands": {
    "move": {
      "description": "Move selected messages",
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "MacCtrl+Shift+M"
      }
    },
    "copy": {
      "description": "Copy selected messages",
      "suggested_key": {}
    },
    "goto": {
      "description": "Go to specified folder",
      "suggested_key": {}
    }
  },

  "experiment_apis": {
    "quickmove": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["quickmove"]],
        "script": "api/api.js"
      }
    }
  }
}
